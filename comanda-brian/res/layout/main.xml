<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:swipeytabs="http://schemas.android.com/apk/res/com.company.comanda.brian"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:id="@+id/main_menu_item_list"
   >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/tableNametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="" />

    </LinearLayout>
    <net.peterkuterna.android.apps.swipeytabs.SwipeyTabs
        android:id="@+id/categoriesTabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        swipeytabs:bottomBarColor="#ff96aa39"
        swipeytabs:bottomBarHeight="2dip"
        swipeytabs:tabIndicatorHeight="3dip"
        android:background="#ff3b3b3b"/>
    <android.support.v4.view.ViewPager
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_weight="1" 
    android:id="@+id/categoriesPager"/>

    <Button
        android:id="@+id/buttonReviewOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/review_order" />

</LinearLayout>