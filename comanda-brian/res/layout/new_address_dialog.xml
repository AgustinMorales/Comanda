<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="400dip"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_address_details" />

    <EditText
        android:id="@+id/editTextNiceAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nice_address_hint" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextAdditionalAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_additional_data" />

    <Button
        android:id="@+id/buttonSubmitNewAddress"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="@string/add_address_button" />

</LinearLayout>