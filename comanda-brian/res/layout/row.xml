<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="6dip"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/menu_item_image"
        android:src="@drawable/ic_launcher" />

        

        <TextView
            android:id="@+id/no_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:layout_toLeftOf="@+id/removeorderbutton"
            android:textColor="#ffff6400"
            android:text="23" />

    <ImageButton
        android:id="@+id/placeorderbutton"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:paddingRight="10dip"
        android:background="@drawable/button_plus" />

    <View
     android:id="@+id/blank"
     android:layout_height="2dp"
     android:layout_width="15dip"
     android:background="#00DDFFDD"
     android:layout_marginTop="5dip"
     android:layout_toLeftOf="@+id/placeorderbutton"
     android:layout_marginBottom="5dip"/>
    <ImageButton
        android:id="@+id/removeorderbutton"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:paddingRight="10dip"
        android:layout_toLeftOf="@+id/blank"
        android:background="@drawable/button_less" />
    
    <TextView
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_toLeftOf="@+id/no_of_items"
            android:gravity="center_vertical"
            android:text="Texto de prueba" />

</RelativeLayout>