<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

        <Button
            android:id="@+id/review_deliveries_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/review_deliveries_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

        <Button
            android:id="@+id/order_delivery_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/review_deliveries_button"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/order_food" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/full_logo" />

</RelativeLayout>