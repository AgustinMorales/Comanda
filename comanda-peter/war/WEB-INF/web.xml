<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.company.comanda.peter.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>xmlMenuItems</servlet-name>
    <servlet-class>com.company.comanda.peter.server.GetItemsServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>placeOrder</servlet-name>
    <servlet-class>com.company.comanda.peter.server.PlaceOrderServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/comanda_peter/greet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>xmlMenuItems</servlet-name>
    <url-pattern>/menuitems</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>placeOrder</servlet-name>
    <url-pattern>/placeOrder</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Comanda_peter.html</welcome-file>
  </welcome-file-list>

</web-app>
