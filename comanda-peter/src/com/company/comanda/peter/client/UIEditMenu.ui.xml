<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
				<g:Label text="Menu Items"/>
			</g:HorizontalPanel>
		<g:VerticalPanel width="100%" height="" verticalAlignment="ALIGN_TOP">
			<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
				<g:HorizontalPanel spacing="10">
					<g:Button text="New" ui:field="btnNewItem">New menu item</g:Button>
					<g:Button text="Edit" ui:field="btnEditItem"/>
					<g:Button text="Delete" ui:field="btnDeleteItem"/>
				</g:HorizontalPanel>
			</g:HorizontalPanel>
			<g:ScrollPanel height="387px">
				<p1:CellTable ui:field="menuItemsTable" width="100%" height="100%"/>
			</g:ScrollPanel>
			<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
				<p1:SimplePager location="CENTER" ui:field="menuItemsPager"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 